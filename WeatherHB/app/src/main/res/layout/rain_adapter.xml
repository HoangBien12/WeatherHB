<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/bg_weather">

    <TextView
        android:id="@+id/tvDayRain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressRain"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress"
        style="?android:attr/progressBarStyleHorizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDayRain" />

    <TextView
        android:id="@+id/tvProbabilityRain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 %"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/progressRain"
        app:layout_constraintBottom_toBottomOf="@id/progressRain"
        app:layout_constraintRight_toRightOf="@id/progressRain"
        app:layout_constraintLeft_toLeftOf="@id/progressRain"/>

</androidx.constraintlayout.widget.ConstraintLayout>